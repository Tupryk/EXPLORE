      <geom type="box" size="0.01 0.25 0.01" rgba="0.25 0.25 0.25 1" mass="0.2"/>
      <body name="hook_hook" pos="0.075 0.25 0.0">
        <geom type="box" size="0.075 0.01 0.01" rgba="0.25 0.25 0.25 1" mass="0.5"/>
      </body>
    </body>
