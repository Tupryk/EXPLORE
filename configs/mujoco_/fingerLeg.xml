<mujoco model="ry_convert">
  <compiler angle="radian" meshdir="unitree_g1/assets"/>

  <!-- <asset>
    <mesh file="right_hip_pitch_link.STL"/>
    <mesh file="right_hip_roll_link.STL"/>
    <mesh file="right_hip_yaw_link.STL"/>
    <mesh file="right_knee_link.STL"/>
